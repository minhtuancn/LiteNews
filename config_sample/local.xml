<?xml version="1.0"?>

<config>
	<!-- Must end with slash -->
	<baseURL>localhost/</baseURL>
	
	<timezone>Europe/Helsinki</timezone>
	
	<!-- Enable full page cache -->
	<FPC>true</FPC>
	
	<!-- Admin panel can be accessed at /admin -->
	<admin>
		<password>password</password>
		<maxLoginAttempts>5</maxLoginAttempts>
	</admin>
	
	<!-- Log expiration in days  -->
	<logExpire>30</logExpire>
	
	<!-- Sort websites by popularity in main page -->
	<sortByPopularity>true</sortByPopularity>
	
	<listLimit>75</listLimit>
	
	<!-- Serialized array of website ID's -->
	<collection>a:8:{i:0;i:1;i:1;i:2;i:2;i:3;i:3;i:4;i:4;i:5;i:5;i:6;i:6;i:9;i:7;i:12;}</collection>
	
	<feedback>
		<enable>true</enable>
		<maxFeedbackPerHour>5</maxFeedbackPerHour>
		<feedbackTypes>
			<type>New website</type>
			<type>Report a bug</type>
			<type>Other</type>
		</feedbackTypes>
	</feedback>
	
	<userSettings>
		<enable>true</enable>
		<cookie>settings</cookie>
		
		<!-- Cookie expiration in minutes -->
		<cookieExpire>525600</cookieExpire>
		
		<!-- Default values for user settings -->
		<default>
			<!-- Language must be in locale directory -->
			<lang>fi</lang>
			
			<!-- Theme ID -->
			<theme>2</theme>
		</default>
	</userSettings>
	
	<locales>
		<locale>en</locale>
		<locale>fi</locale>
	</locales>
</config>
