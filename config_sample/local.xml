<?xml version="1.0"?>

<config>
	<!-- Must end with slash -->
	<baseURL>localhost/</baseURL>
	
	<siteTitle> - LiteNews</siteTitle>
	
	<timezone>Europe/Helsinki</timezone>
	
	<!-- Backup loader in case of fetching content fails -->
	<backupLoader></backupLoader>
	<backupLoaderKey></backupLoaderKey>
	
	<!-- Enable full page cache -->
	<FPC>true</FPC>
	
	<!-- Merge CSS files -->
	<mergeCSS>true</mergeCSS>
	
	<!-- Merge JS files -->
	<mergeJS>true</mergeJS>
	
	<!-- Admin panel can be accessed at /admin -->
	<admin>
		<password>password</password>
		<maxLoginAttempts>5</maxLoginAttempts>
	</admin>
	
	<!-- Log expiration in days  -->
	<logExpire>30</logExpire>
	
	<!-- Sort websites by popularity in main page -->
	<sortByPopularity>true</sortByPopularity>
	
	<listLimit>75</listLimit>
	
	<feedback>
		<enable>true</enable>
		<maxFeedbackPerHour>5</maxFeedbackPerHour>
		<feedbackTypes>
			<type>New website</type>
			<type>Report a bug</type>
			<type>Other</type>
		</feedbackTypes>
	</feedback>
	
	<userSettings>
		<enable>true</enable>
		<cookie>settings</cookie>
		
		<!-- Cookie expiration in minutes -->
		<cookieExpire>525600</cookieExpire>
		
		<!-- Default values for user settings -->
		<default>
			<!-- Language must be in locale directory -->
			<lang>fi</lang>
			
			<!-- Theme ID -->
			<theme>4</theme>
			
			<!-- Category ID, 0 is for all -->
			<category>0</category>
			
			<!-- Website filter for collection, 0 is for all -->
			<websiteFilter>0</websiteFilter>
			
			<!-- Show image by default -->
			<showImages>0</showImages>
		</default>
	</userSettings>
	
	<locales>
		<locale>en</locale>
		<locale>fi</locale>
	</locales>
</config>
