<a href="javascript:window.history.go(-1)" class="button"><i class="fa fa-angle-double-left"></i><?php echo $this->__("Previous page"); ?></a><a href="javascript:document.location.reload(true)" class="button buttonRight"><i class="fa fa-refresh"></i><?php echo $this->__("Refresh"); ?></a><?php if(empty($this->content)): ?><div class="error"><?php echo $this->__("No articles found"); ?></div><?php else: ?><?php foreach($this->content as $title): ?><a href="<?php echo str_replace(" ", "+", $title['url']); ?>" class="titleLink">	<span class="titleInfo">		<?php if(isset($title['website'])) echo $title['website']." - "; ?>		<?php echo date("H:i", $title['timestamp']) == "00:00" ? date("d.m.y", $title['timestamp']) : date("d.m.y H:i", $title['timestamp']); ?>	</span>	<?php echo $title['title']; ?></a><?php endforeach; ?><a href="javascript:window.history.go(-1)" class="button"><i class="fa fa-angle-double-left"></i><?php echo $this->__("Previous page"); ?></a><a href="javascript:document.location.reload(true)" class="button buttonRight"><i class="fa fa-refresh"></i><?php echo $this->__("Refresh"); ?></a><?php endif; ?>