<form action="/settings" method="post" name="settingsForm">	<a href="/" class="button"><?php echo $this->__("Previous page"); ?></a>	<a href="javascript:document.settingsForm.submit();" class="button buttonRight"><?php echo $this->__("Save"); ?></a>	<?php if(isset($this->content['saveNotice'])): ?>	<div class="<?php echo isset($this->content['saveSuccess']) ? "success" : error ?>"><?php echo $this->__($this->content['saveNotice']); ?></div>	<?php endif; ?>	<div class="contentBox">		<p class="contentSubTitle">			<label for="settings_lang"><?php echo $this->__("Language"); ?></label>		</p>		<select id="settings_lang" name="lang">			<?php foreach(Config::$locales as $locale): ?>			<option value="<?php echo $locale; ?>"<?php if(Controller::GetUserSetting("lang") == $locale) echo " selected"; ?>><?php echo $this->__($locale); ?></option>			<?php endforeach; ?>		</select>	</div>	<div class="contentBox">		<p class="contentSubTitle">			<label for="settings_theme"><?php echo $this->__("Theme"); ?></label>		</p>		<select id="settings_theme" name="theme">			<?php for($i = 0; $i < sizeof(Config::$themes); ++$i): ?>			<option value="<?php echo $i; ?>"<?php if(Controller::GetUserSetting("theme") == $i) echo " selected"; ?>><?php echo $this->__(Config::$themes[$i]); ?></option>			<?php endfor; ?>		</select>	</div>	<div class="contentBox">		<p class="contentSubTitle"><?php echo $this->__("Websites in news collection"); ?></p>		<input type="hidden" name="collection" value="1" />		<?php $collection = unserialize(Controller::GetUserSetting("collection")); ?>		<?php foreach(Config::$websites as $website): ?>		<p class="contentText">			<input type="checkbox" name="collection_<?php echo $website['id']; ?>" id="collection_<?php echo $website['id']; ?>"<?php if(in_array($website['id'], $collection)) echo " checked"; ?> />			<label for="collection_<?php echo $website['id']; ?>"><?php echo $website['name']; ?></label>		</p>		<?php endforeach; ?>	</div>	<div class="contentBox">		<p class="contentSubTitle">			<label for="settings_limit"><?php echo $this->__("Limit number of titles"); ?></label>		</p>		<select id="settings_limit" name="limit">			<option value="0"<?php if(Controller::GetUserSetting("limit") == 0) echo " selected"; ?>><?php echo $this->__("No limit"); ?></option>			<?php for($i = 10; $i <= 50; $i += 10): ?>			<option value="<?php echo $i; ?>"<?php if(Controller::GetUserSetting("limit") == $i) echo " selected"; ?>><?php echo $i; ?></option>			<?php endfor; ?>		</select>	</div>	<a href="/" class="button"><?php echo $this->__("Previous page"); ?></a>	<a href="javascript:document.settingsForm.submit();" class="button buttonRight"><?php echo $this->__("Save"); ?></a></form>